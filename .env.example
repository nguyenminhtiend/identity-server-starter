# Application Environment
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
# Optional: Database connection pool settings (defaults shown)
# DB_POOL_MAX=10
# DB_POOL_IDLE_TIMEOUT=20
# DB_POOL_CONNECT_TIMEOUT=10

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Session & Security
SESSION_SECRET=your-session-secret-min-32-chars-random-string-here-change-in-production
KEY_ENCRYPTION_SECRET=your-key-encryption-secret-min-32-chars-random-string-here-change-in-production

# Token Configuration
ISSUER_URL=http://localhost:3000
ACCESS_TOKEN_TTL=900
REFRESH_TOKEN_TTL=2592000

# Key Management
KEY_ROTATION_DAYS=90
KMS_PROVIDER=local
# AWS_KMS_KEY_ID=
# AZURE_KEY_VAULT_URL=
# GCP_KMS_KEY_NAME=

# Multi-tenant Configuration
ENABLE_MULTI_TENANT=false

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
